<p>
  <%= link_to 'Alpha Blog', root_path %>
  <span class="space-from-home-text">
  <%= link_to 'Bloggers', users_path %>
  <%= link_to 'Articles', articles_path %>
  <%= link_to 'Categories', categories_path %>  
   <% if logged_in? && current_user.admin? %>
    <%= link_to 'Create category', new_category_path %>
  <% end %>
  <% if logged_in? %>
    <%= link_to 'Create article', new_article_path %>
    <%= "(Admin)" if current_user.admin? %><%= link_to current_user.username, user_path(current_user) %>
    <%= link_to 'Log out', logout_path, method: :delete %>
    <%= link_to 'Delete profile', user_path(current_user), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-profile" %>
  <% else %>
    <%= link_to 'Log in', login_path %>
    <%= link_to 'Sign up', signup_path %>
  <% end %>
  
</p>