<h1>Category</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= link_to @category.name, category_path(@category) %></td>
      </tr>
      <tr>
        <td><small>Created <%= time_ago_in_words(@category.created_at) %> ago</small></td>
      </tr>
      <tr>
        <td><small>Edited <%= time_ago_in_words(@category.updated_at) %> ago</small></td>
      </tr>
  </tbody>
</table>

<% if logged_in? && current_user.admin? %>
  <%= link_to "Edit category name", edit_category_path(@category) %>
<% end %>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>
